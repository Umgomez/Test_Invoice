@model CustomerViewModel
@{
    ViewData["Title"] = "Delete Customer";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Borrando Cliente</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("CustomerList", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("CustomerList", "Home")">Lista de Clientes</a></li>
                    <li class="breadcrumb-item active">Borrando Cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Borrado por: <small>Ubaldin Gómez</small></h3>
                    </div>
                    <form asp-action="DeleteCustomer" method="post" enctype="multipart/form-data">
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Advertencia!</h5>
                            Estas a punto de borrar el siguiente cliente. Favor de validar y confirmar.
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Customer_ID" />
                            <div class="form-group-sm">
                                <label asp-for="CustomerName">Nombre del Cliente</label>
                                <input type="text" class="form-control" id="CustomerName" asp-for="CustomerName" placeholder="Nombre del Cliente" readonly>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <a href="@Url.Action("CustomerList", "Home")" class="btn btn-sm btn-default">Cancelar</a>
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trask "></i> Borrar</button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</section>