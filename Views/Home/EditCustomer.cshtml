@model CustomerViewModel
@{
    ViewData["Title"] = "Edit Customer";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Editando Cliente</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("CustomerList", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("CustomerList", "Home")">Lista de Clientes</a></li>
                    <li class="breadcrumb-item active">Editando Cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Editado por: <small>Ubaldin Gómez</small></h3>
                    </div>

                    <form asp-action="EditCustomer" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Customer_ID" />
                            <div class="form-group-sm">
                                <label asp-for="CustomerName">Nombre del Cliente</label>
                                <input type="text" class="form-control" id="CustomerName" asp-for="CustomerName" placeholder="Nombre del Cliente" required>
                            </div>
                            <div class="form-group-sm">
                                <label for="Address">Dirección</label>
                                <input type="text" class="form-control" id="Address" asp-for="Address" placeholder="Dirección" required>
                            </div>
                            <div class="form-group-sm">
                                <label asp-for="CustomerType_ID">Tipo de Cliente</label>
                                <select id="CustomerType_ID" asp-for="CustomerType_ID" class="form-control" asp-items="@ViewBag.CustomerTypes" required>
                                    <option selected="@Model.CustomerType_ID"></option>
                                </select>
                            </div>
                            <div class="form-group-sm">
                                <label asp-for="CustomerStatus_ID">Estatus</label>
                                <select id="CustomerStatus_ID" asp-for="CustomerStatus_ID" class="form-control" asp-items="@ViewBag.CustomerStatus" required>
                                    <option selected="@Model.CustomerStatus_ID"></option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <a href="@Url.Action("CustomerList", "Home")" class="btn btn-sm btn-default">Cancelar</a>
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-save "></i> Actualizar</button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</section>